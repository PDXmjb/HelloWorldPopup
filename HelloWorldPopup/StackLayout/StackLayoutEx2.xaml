<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HelloWorldPopup.StackLayoutEx2">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 40, 0, 0"></OnPlatform>
    </ContentPage.Padding>
    <StackLayout Spacing="15">
        <Label x:Name="username" Text="nyc_photographer"></Label>
        <Image Source="http://lorempixel.com/1920/1080/nature/3/"></Image>
        <StackLayout Spacing="25" Orientation="Horizontal">
            <Button Text="Like" />
            <Button Text="Comment" />
            <Button Text="Share" />
        </StackLayout>
        <BoxView Color="#F0F0F0" HeightRequest="1" />
        <Label FontAttributes="Bold" Text="700 likes" />
        <Label Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark." />
    </StackLayout>
</ContentPage>
