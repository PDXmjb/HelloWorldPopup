<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="#127AC7" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HelloWorldPopup.GridLayout.GridLayoutEx2">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" VerticalOptions="Center">
            <Label TextColor="White" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" Text="Welcome to Xamarin"></Label>
            <Label TextColor="White" HorizontalOptions="Center" FontSize="16" Text="Cross-platform apps made easy"></Label>
        </StackLayout>
        <Button Grid.Row="1" TextColor="White" BackgroundColor="#1DABF0" Text="Login"></Button>
        <Button Grid.Row="2" TextColor="White" BackgroundColor="#1DABF0" Text="Register"></Button>
    </Grid>
    
</ContentPage>
